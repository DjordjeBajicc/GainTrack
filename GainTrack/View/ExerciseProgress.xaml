<Page x:Class="GainTrack.View.ExerciseProgress"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    xmlns:converters="clr-namespace:GainTrack.Converters"
    mc:Ignorable="d" 
    d:DesignHeight="650" d:DesignWidth="800" Background="{DynamicResource BackgroundBrush}">
    <Page.Resources>
        <Style TargetType="lvc:DefaultTooltip">
            <Setter Property="Background" Value="{DynamicResource PanelBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource TextBrush }" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
        <converters:RadioButtonToStringConverter x:Key="RadioButtonToStringConverter" />
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>

            <ColumnDefinition Width="4*"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="5" Grid.Column="0" Orientation="Horizontal">
            
            <RadioButton Name="WeightExerciseRadioButton" 
                    Style="{DynamicResource RadioButtonStyle}" 
                    FontSize="12"
                    Content="{DynamicResource Weight}" 
                    GroupName="ExerciseType" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Right"
                    IsChecked="{Binding SelectedExerciseType, Converter={StaticResource RadioButtonToStringConverter}, ConverterParameter=Weight}" />
            <RadioButton Name="CardioExerciseRadioButton" 
                    Style="{DynamicResource RadioButtonStyle}"
                    FontSize="12"
                    Content="{DynamicResource Cardio}"  
                    GroupName="ExerciseType" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Right"
                    IsChecked="{Binding SelectedExerciseType, Converter={StaticResource RadioButtonToStringConverter}, ConverterParameter=Cardio}" />
        </StackPanel>
        <ListView Name="HistoryListView" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Foreground="{DynamicResource TextBrush}" Background="{DynamicResource PanelBrush}" ItemsSource="{Binding FilteredExercises}" SelectedItem="{Binding SelectedExercise, Mode=TwoWay}" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Stretch" Margin="10">
            <ListView.Resources>
                <!-- Stil za zaglavlja kolona -->
                <Style TargetType="GridViewColumnHeader">
                    <Setter Property="Background" Value="{DynamicResource BackgroundBrush}"/>
                    <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Height" Value="40"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource BackgroundBrush}"/>

                </Style>
            </ListView.Resources>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="{DynamicResource Exercises}"  Width="130" DisplayMemberBinding="{Binding Name}" />
                </GridView>
            </ListView.View>
        </ListView>


        <DataGrid VerticalAlignment="Stretch" Name="ExercisesDataGrid" Style="{DynamicResource MaterialDesignDataGrid}" ItemsSource="{Binding FilteredExercises}"  Grid.Column="1" AutoGenerateColumns="False" Margin="10,10,10,28"
            HeadersVisibility="Column" Grid.Row="0" Grid.RowSpan="2" HorizontalScrollBarVisibility="Hidden" CanUserSortColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="{DynamicResource Date}" IsReadOnly="true" Binding="{Binding Date}" Width="2*"/>
                <DataGridTextColumn Header="{DynamicResource Set}" Binding="{Binding Reps, Mode=TwoWay}" Width="1*"/>
                <DataGridTextColumn Header="{DynamicResource Reps}" Binding="{Binding Reps, Mode=TwoWay}" Width="1*"/>
                <DataGridTextColumn Header="{DynamicResource Weight}" Binding="{Binding Weight, Mode=TwoWay}"  Width="1*"/>
                <DataGridTextColumn Header="{DynamicResource Distance}" Binding="{Binding Distance, Mode=TwoWay}"  Width="1*"/>
                <DataGridTextColumn Header="{DynamicResource Time}" Binding="{Binding Time, Mode=TwoWay}"  Width="1*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>

</Page>
