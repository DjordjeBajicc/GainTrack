<Window x:Class="GainTrack.CreateClient"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:GainTrack"
    mc:Ignorable="d"
    Title="CreateClient" Height="260" Width="500"
    Background="{DynamicResource BackgroundBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Ime -->
        <TextBlock Text="{DynamicResource FirstName}" Style="{DynamicResource BodyTextStyle}" FontSize="16" Margin="10,10,10,5"/>
        <TextBox Name="FirstnameTextBox" Text="{Binding Firstname}" Style="{DynamicResource TextBoxStyle}" Grid.Row="1" Margin="10,0,10,10"/>

        <!-- Prezime -->
        <TextBlock Text="{DynamicResource LastName}" Style="{DynamicResource BodyTextStyle}" FontSize="16" Grid.Row="2" Margin="10,10,10,5"/>
        <TextBox Name="LastnameTextBox" Text="{Binding Lastname}" Style="{DynamicResource TextBoxStyle}" Grid.Row="3" Margin="10,0,10,10"/>

        <!-- Trener -->


        <!-- Dugmad -->
        <StackPanel Orientation="Horizontal" Grid.Row="6" HorizontalAlignment="Center" Margin="0,20">
            <Button Content="Sačuvaj" Style="{DynamicResource ButtonStyle}"  Margin="10" Command="{Binding SaveCommand}"/>
            <Button Content="Otkaži"  Style="{DynamicResource ButtonStyle}"  Margin="10" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

        
